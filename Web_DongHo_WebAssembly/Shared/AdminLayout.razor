@inherits LayoutComponentBase
<style>
    .adminPage {
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .adminMain {
        flex: 1;
    }

    .sidebar {
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
    }

    .top-row {
        background-color: #f7f7f7;
        border-bottom: 1px solid #d6d5d5;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

        .top-row ::deep a, .top-row .btn-link {
            white-space: nowrap;
            margin-left: 1.5rem;
        }

        .top-row a:first-child {
            overflow: hidden;
            text-overflow: ellipsis;
            margin: auto;
            margin-right: 85px;
        }
</style>
<div class="adminPage">
    <div class="sidebar">
        <AdminNavMenu />
    </div>

    <div class="adminMain">
        <div class="adminContent px-4">
            @Body
        </div>
    </div>
</div>
